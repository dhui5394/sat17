<div class='col-md-offset-3'>
  <%= form_for @answer, url: questions_path do |f| %>
    <br />
    <div class="form-group">
      <h2><%= @statement.statement%></h2>
    </div> <br />
    <%= f.hidden_field 'statements_id', value: @statement.id%>
    <%= f.hidden_field 'options_id'%>
	  <% @options.each do |option|%>
	    <div class="form-group col-sm-10">
	    	<%= f.submit option.option, :class=>"btn btn-primary col-sm-3 submit-btn" , 'data-val' => option.id  %>
	    </div>
	  <% end %>
  <% end %>
</div>